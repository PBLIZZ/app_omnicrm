# Supabase (public)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=publishable-key

# Supabase (server-only)
# Server-only; DO NOT expose to client bundles
# Server secret key (server-only)
SUPABASE_SECRET_KEY=service_secret_xxx

# App encryption key (32-byte). Prefer base64url.
# Accepted formats: base64url (preferred), base64, hex, or strong UTF-8 (≥ 32 bytes)
# Generate base64url (example): openssl rand -base64 32 | tr '+/' '-_' | tr -dº '='
APP_ENCRYPTION_KEY=
CRON_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Service-specific OAuth redirects (reuse same client ID/secret)
GOOGLE_GMAIL_REDIRECT_URI=http://localhost:3000/api/google/gmail/callback
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/calendar/oauth/callback

GOOGLE_CALLBACK_URL=
GOOGLE_CLOUD_PROJECT=

# CORS / Security
APP_ORIGINS=http://localhost:3000
API_RATE_LIMIT_PER_MIN=60
API_MAX_JSON_BYTES=1000000

# Feature flags (read-only integrations)
FEATURE_GOOGLE_GMAIL_RO=1
FEATURE_GOOGLE_CALENDAR_RO=1
FEATURE_GOOGLE_DRIVE=1


# AI / OpenRouter
# If not set, AI provider calls will be disabled in non-production.
OPENROUTER_API_KEY=
# Model names can be overridden per environment
AI_MODEL_CHAT=openrouter/auto
AI_MODEL_EMBED=openai/text-embedding-3-large
AI_MODEL_SUMMARY=openrouter/auto

# Claude AI (Alternative to OpenRouter)
# If provided, Claude will be used for chat instead of OpenRouter
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI (for embeddings)
# Required for AI semantic search and calendar embeddings
OPENAI_API_KEY=

# Calendar Integration
# Required for calendar ingestion and AI insights
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/calendar/oauth/callback

# Additional Google Services
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/google/drive/callback

# For Drizzle
# Use pooled for runtime, direct for migrations (see below)
DATABASE_URL="postgresql://YOUR_USERNAME@localhost:5432/test_omnicrm"
# New admin key (server-only). Treat like the old service_role.
# RLS Bypass Admin Key
DIRECT_URL="postgresql://YOUR_USERNAME@localhost:5432/test_omnicrm"
SUPABASE_URL=https://projectid.supabase.co

# Redis (Upstash) - for rate limiting, caching, and SSE connections
# Sign up at https://upstash.com/ for free tier (256MB, 500K commands/month)
UPSTASH_REDIS_REST_URL="https://YOUR_REDIS_HOST.upstash.io"
UPSTASH_REDIS_REST_TOKEN="YOUR_REDIS_TOKEN"
# Upstash Redis TCP
REDIS_URL="rediss://default:YOUR_REDIS_TOKEN@YOUR_REDIS_HOST.upstash.io:6379"

# Sentry
NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/project_id"
SENTRY_ORG=
SENTRY_PROJECT=


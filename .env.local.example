# Supabase project
SUPABASE_DB_PASSWORD=[YOUR_PASSWORD] #percentage password
SUPABASE_PROJECT_ID=[YOUR_PROJECT_ID]
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR_PROJECT_ID].supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=[YOUR_PUBLISHABLE_KEY]
SUPABASE_SECRET_KEY=[YOUR_SECRET_KEY]
NEXT_PUBLIC_APP_URL=http://localhost:3000

APP_ENCRYPTION_KEY=<32-byte base64url>   # required for token encryption
# Accepted: base64url (preferred), base64, hex, or strong UTF-8 (â‰¥ 32 bytes)
CRON_SECRET=secure_string

FEATURE_GOOGLE_GMAIL_RO=1
FEATURE_GOOGLE_CALENDAR_RO=1
FEATURE_GOOGLE_DRIVE=1

# DB (use both URLs)
DATABASE_URL=postgresql://postgres.[YOUR_PROJECT_ID]:[YOUR_PASSWORD]@[region].pooler.supabase.com:6543/postgres
DIRECT_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_ID].supabase.co:5432/postgres

# LLM provider
OPENROUTER_API_KEY=[YOUR_API_KEY]

AI_CREDITS_MONTHLY=200         # how many LLM calls per user per month
AI_REQUESTS_PER_MINUTE=8       # per-user throttle
AI_DAILY_EUR_HARDCAP=2         # optional: stop if logged cost today exceeds this

API_RATE_LIMIT_PER_MIN=60   # optional
API_MAX_JSON_BYTES=1000000  # optional
APP_ORIGINS=http://localhost:3000


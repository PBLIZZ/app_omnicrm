#!/usr/bin/env sh

# Set Node.js memory limit for local development
export NODE_OPTIONS="--max_old_space_size=8192"

# Run lint-staged first for formatting and basic linting
npx --no-install lint-staged

# Skip CI guardrails in CI environment (they run in GitHub Actions)
if [ "$CI" = "true" ]; then
  echo "ğŸš€ Running in CI, skipping pre-commit guardrails (will run in CI pipeline)"
  exit 0
fi

# Run CI guardrails locally
echo "Running CI guardrails locally..."

# Type checking with strict build config (gracefully handle memory issues)
echo "âœ“ Running strict type checking..."
if ! npm run build:types; then
  echo "âš ï¸  Type check failed or out of memory - will be validated in CI"
fi

# Architecture boundary validation
echo "âœ“ Validating architecture boundaries..."
if ! npm run lint:architecture; then
  echo "âŒ Architecture validation failed"
  exit 1
fi

# Verify database import patterns
echo "âœ“ Verifying database imports..."
if ! npm run verify:db-imports; then
  echo "âŒ Database import validation failed"
  exit 1
fi

# Verify DTO usage patterns
echo "âœ“ Verifying DTO usage..."
if ! npm run verify:dto-usage; then
  echo "âŒ DTO usage validation failed"
  exit 1
fi

echo "âœ… All CI guardrails passed!"

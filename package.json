{
  "name": "app_omnicrm",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "NODE_OPTIONS=--max-old-space-size=6144 eslint --cache --cache-location .eslintcache .",
    "lint:prod": "NODE_OPTIONS=--max-old-space-size=6144 NODE_ENV=production eslint .",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:strict": "NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 eslint --cache --cache-location .eslintcache .",
    "format": "prettier --write .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "e2e": "dotenv -e .env.local -- playwright test",
    "e2e:debug": "dotenv -e .env.local -- playwright test --debug",
    "e2e:setup": "tsx scripts/setup-e2e-auth.ts",
    "e2e:full": "pnpm e2e:setup && pnpm e2e",
    "migrate:backup": "tsx scripts/migrate-backup.ts",
    "migrate:validate": "tsx scripts/migrate-validate.ts",
    "backfill:timeline": "tsx scripts/backfill-timeline.ts",
    "backfill:dry-run": "tsx scripts/backfill-timeline.ts --dry-run",
    "process:events": "dotenv -e .env.local -- tsx scripts/process-existing-events.ts",
    "types:db": "pnpm supabase:types",
    "supabase:types": "supabase gen types --lang=typescript --project-id $SUPABASE_PROJECT_ID > src/server/db/database.types.ts",
    "types:local": "supabase gen types --lang=typescript --local > src/server/db/database.types.ts",
    "types:verify": "pnpm types:db && git diff --quiet src/server/db/database.types.ts",
    "types:check": "test -f src/server/db/database.types.ts && echo 'Types file exists' || (echo 'Types file missing - run pnpm types:db' && exit 1)",
    "build:types": "tsc --project tsconfig.build.json",
    "lint:architecture": "tsx scripts/lint-architecture.ts",
    "test:types": "tsx scripts/verify-types.ts",
    "verify:db-imports": "tsx scripts/verify-db-imports.ts",
    "verify:dto-usage": "tsx scripts/verify-dto-usage.ts",
    "ci:typecheck": "pnpm build:types && pnpm typecheck",
    "ci:architecture": "pnpm lint:architecture && pnpm verify:db-imports && pnpm verify:dto-usage",
    "ci:full": "NODE_OPTIONS='--max-old-space-size=8192' pnpm ci:typecheck && NODE_OPTIONS='--max-old-space-size=8192' pnpm lint:strict && pnpm test && pnpm ci:architecture",
    "drizzle:introspect": "drizzle-kit introspect --config=drizzle.config.ts && cp .drizzle-introspect/schema.ts src/server/db/schema.ts && (test -f .drizzle-introspect/relations.ts && cp .drizzle-introspect/relations.ts src/server/db/relations.ts || true)"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.0",

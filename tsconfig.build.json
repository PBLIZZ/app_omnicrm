{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // Override base config for stricter CI checking
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    // Additional strictness for CI
    "skipLibCheck": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    // Memory optimization for CI
    "incremental": false,
    "composite": false
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "vitest-env.d.ts"
  ],
  "exclude": [
    // Exclude all test files to reduce noise in CI
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**/*",
    "e2e/**/*",
    "tests/**/*",
    "playwright.config.ts",
    // Exclude development scripts
    "scripts/**/*",
    // Exclude build artifacts
    ".next/**/*",
    "node_modules/**/*",
    "drizzle/**/*"
  ]
}